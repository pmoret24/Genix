<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= simple_form_for(@pitch, html: { class: 'custom-form' }) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-group">
          <label for="title">Pitch Name</label>
          <div class="input-icon">
            <i class="fas fa-user"></i>
            <%= f.input_field :title, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="category">Category Name</label>
          <div class="input-icon">
            <i class="fas fa-tags"></i>
            <%= f.input_field :category, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="languages">Skills</label>
          <div class="input-icon">
            <i class="fas fa-code"></i>
            <%= f.input_field :languages, collection: ['Ruby', 'Python', 'Java', 'JavaScript', 'C++', 'PHP', 'SQL', 'others'], class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <div class="input-icon">
            <i class="fas fa-info-circle"></i>
            <%= f.input_field :description, as: :text, rows: 4, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="source">Source Name</label>
          <div class="input-icon">
            <i class="fas fa-link"></i>
            <%= f.input_field :source, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group">
          <label for="photo">Upload Photo</label>
          <div class="input-icon">
            <i class="fas fa-camera"></i>
            <%= f.input_field :photo, as: :file, class: 'form-control-file' %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Submit', class: 'btn btn-primary m-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
