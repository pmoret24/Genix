<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sua PÃ¡gina</title>
    <link rel="stylesheet" href="seu-estilo.css">
</head>
<body-pitch>
<div class="container mt-5">
  <div class="row justify-content-center m-5">
    <div class="col-md-9">
      <div class="description-item">


      <div class="card shadow-lg p-3 mb-5 bg-white rounded">
        <div class="card-body-pitch ">
          <div class="d-flex ">
            <%= cl_image_tag current_user.photo.key, alt: current_user.first_name, class: " comment-user-img img-thumbnail rounded-circle" %>
            <h4 class="card-title mt-3"><%= current_user.first_name %> <%= current_user.last_name %></h4>
          </div>
                <h2 class="card-title-show align-text-center"> <%= @pitch.title %></h2>
          <div class="d-flex align-items-center">

              <%= cl_image_tag @pitch.photo.key, alt: current_user.first_name, class: "img-pitches img-thumbnail m-3" %>
              <div>
          <p class="card-text-pitch comment-text"><%= @pitch.languages %></p>
                <p class="card-category "><strong>Category:</strong> <%= @pitch.category %></p>
              </div>
          </div>
          <p class="card-category text-center"><%= @pitch.description %></p>

          <div class="d-flex justify-content-between mt-4">
            <%= link_to "Edit this pitch", edit_pitch_path(@pitch), class: "btn btn-primary" if @pitch.user == current_user %>
            <%= link_to "Back to pitch", pitches_path, class: "btn btn-success" %>
            <% if @pitch.user == current_user %>
              <%= button_to "Delete this pitch", @pitch, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="comments-section mt-4">
        <% @pitch.comments.each do |comment| %>
          <div class="card mb-3 comment-box-pitch comment-box-pitch-inner triangle-comment">
            <div class="card-body-pitch">
              <div class="d-flex align-items-start">
                <div>
                  <%= cl_image_tag comment.user.photo.key, class: "comment-user-img img-thumbnail rounded-circle"%>
                </div>
                <div class="ml-3 comments-icons">
                  <h5 class="card-title"><%= comment.user.first_name %> <%= comment.user.last_name %></h5>
                 <% if comment.rating == 1 %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                <% elsif comment.rating == 2 %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                <% elsif comment.rating == 3 %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                <% elsif comment.rating == 4 %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                <% else %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                  <%= content_tag :i, "", class: "fa-solid fa-star" %>
                <% end %>
                  <p class="card-text-pitch comment-text"><%= comment.content %></p>
                  <p class="card-text-pitch text-muted"><small><%= time_ago_in_words(comment.created_at) %> ago</small></p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="display-flex flex-wrap">
        <div class="comments-comment-box-pitch-comment__text-editor">
          <div class="comment-box-pitch">
            <div class="comment-user-img">
              <%= cl_image_tag current_user.photo.key, alt: current_user.first_name, class: "img-thumbnail rounded-circle" %>
            </div>
            <div class="comment-box-pitch-content">
              <h5><%= current_user.first_name %> <%= current_user.last_name %></h5>
              <%= simple_form_for [@pitch, @comment], class: "mt-3" do |f| %>
                <div class="form-group">
                  <%= f.input :content, label: false, placeholder: "Type your comment here...", input_html: { class: "form-control" } %>
                </div>
                <div class="form-group">
                  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { data: { controller: "star-rating" } } %>
                </div>
                <%= f.submit "Add Comment", class: "btn btn-primary btn-block" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body-pitch>
</html>
